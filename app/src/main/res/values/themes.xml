<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_MyWeather" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryVariant">@color/orange_d_primary</item>
        <item name="colorOnPrimary">@color/orange_divider</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_text_second</item>
        <item name="colorSecondaryVariant">@color/orange_accent</item>
        <item name="colorOnSecondary">@color/orange_text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorAccent">@color/orange_accent</item>
    </style>

    <style name="Theme_MyWeather_Dark" parent="ThemeOverlay.MaterialComponents.Dark">
    </style>

    <style name="toolbar">
        <item name="theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="android:background">@color/orange_primary</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/orange_d_primary</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="card">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>